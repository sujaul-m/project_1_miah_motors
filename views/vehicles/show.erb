<nav>
  <ul style="list-style: none;">
    <li>
      <h1 style="text-align:center;" ><a href="/vehicles">Go Back to Vehicles List</a></h1>
    </li>
  </ul>
</nav>

<img src="<%= @vehicle.image %>" alt="<%= @vehicle.model %> Image" style="float:right;width:750px;height:750px;">
<h3 style="text-align:center;"> Dealership Bought From: <%= @vehicle.get_dealership_name() %> </h3>
<h3 style="text-align:center;"> Make: <%= @vehicle.make() %> </h3>
<h3 style="text-align:center;"> Model: <%= @vehicle.model() %> </h3>
<h3 style="text-align:center;"> Stock Level to Order At: <%= @vehicle.min_stock %> </h3>
<h3 style="text-align:center;"> Quantity: <%= @vehicle.quantity() %> </h3>
<h3 style="text-align:center;"> Purchase Price: £<%= @vehicle.purchase_price() %> </h3>
<h3 style="text-align:center;"> Selling Price: £<%= @vehicle.selling_price() %> </h3>
<h3 style="text-align:center;"> Mark Up: £<%= @vehicle.mark_up() %> </h3>
<br>
<form style="text-align:center;" action="/vehicles/<%= @vehicle.id() %>/purchase" method="post">
  <input type="submit" value="Purchase One More">
</form>
<br>
<form style="text-align:center;" action="/vehicles/<%= @vehicle.id() %>/sold" method="post">
  <input type="submit" value="Sold One Vehicle">
</form>
<br>
<form style="text-align:center;" action="/vehicles/<%= @vehicle.id() %>/delete" method="post">
  <input type="submit" value="Remove Vehicle">
</form>
<br>

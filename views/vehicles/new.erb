<h1 style="text-align:center;">FORM TO ADD NEW VEHICLE</h1>

<form style="text-align:center;" action="/vehicles" method="post">
  <br>
  <br>
  <br>
  <br>

  <label for="dealership-select">Select Dealership</label>
  <select id="dealership-select" name="dealership_id">
    <option Selected Disabled>Select Dealership</option>
    <% for dealership in @dealerships %>
    <option value=<%= dealership.id %>><%= dealership.name %></option>
    <% end %>
  </select>
  <br>
  <br>
  <br>
  <br>

  <label for="make">Make</label>
  <input type="text" name="make" id="make">
  <br>
  <br>
  <br>
  <br>

  <label for="model">Model</label>
  <input type="text" name="model" id="model">
  <br>
  <br>
  <br>
  <br>

  <label for="min-stock">Minimum Stock Level to Order At</label>
  <input type="text" name="min_stock" id="min-stock">
  <br>
  <br>
  <br>
  <br>

  <label for="quantity">Quantity</label>
  <input type="text" name="quantity" id="quantity">
  <br>
  <br>
  <br>
  <br>

  <label for="purchase-price">Purchase Price</label>
  <input type="text" name="purchase_price" id="purchase-price">
  <br>
  <br>
  <br>
  <br>

  <label for="selling-price">Selling Price</label>
  <input type="text" name="selling_price" id="selling-price">
  <br>
  <br>
  <br>
  <br>

  <label for="image">Image Link</label>
  <input type="text" name="image" id="image">
  <br>
  <br>
  <br>
  <br>

  <input type="submit" value="Add Vehicle">

</form>
